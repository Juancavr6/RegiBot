<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragment.MoreFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:clipChildren="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginHorizontal="25dp">

            <Space
                android:layout_width="match_parent"
                android:layout_height="30dp"/>

            <include layout="@layout/widget_kofi"
                android:id="@+id/imageKofi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginVertical="18dp"
                />
            <Space
                android:layout_width="match_parent"
                android:layout_height="30dp"/>

            <androidx.cardview.widget.CardView
                android:id="@+id/card_theme"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                app:cardElevation="6dp"
                app:cardCornerRadius="8dp"
                android:foreground="?attr/selectableItemBackground"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginStart="10dp"
                    android:layout_gravity="center"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/vector_theme"
                        app:tint="@color/gray"/>


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="26dp"
                        android:orientation="vertical"
                        android:layout_weight="1">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/displayText_theme"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            />

                        <TextView
                            android:id="@+id/text_theme"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Dark"
                            android:textSize="14sp"
                            android:textColor="@color/gray" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <Space
                android:layout_width="match_parent"
                android:layout_height="30dp"/>
            <androidx.cardview.widget.CardView
                android:id="@+id/card_lang"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                app:cardElevation="6dp"
                app:cardCornerRadius="8dp"
                android:foreground="?attr/selectableItemBackground"

                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginStart="10dp"
                    android:layout_gravity="center"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/vector_language"
                        app:tint="@color/gray"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="26dp"
                        android:orientation="vertical"
                        android:layout_weight="1">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/displayText_language"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            />

                        <TextView
                            android:id="@+id/text_lang"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Englsih"
                            android:textSize="14sp"
                            android:textColor="@color/gray" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <Space
                android:layout_width="match_parent"
                android:layout_height="30dp"/>
            <androidx.cardview.widget.CardView
                android:id="@+id/card_perms"

                android:layout_width="match_parent"
                android:layout_height="75dp"
                app:cardElevation="6dp"
                app:cardCornerRadius="8dp"
                android:foreground="?attr/selectableItemBackground"

                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginStart="10dp"
                    android:layout_gravity="center"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/vector_permission"
                        app:tint="@color/gray"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="26dp"
                        android:orientation="vertical"
                        android:layout_weight="1">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/displayText_permission"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/displayText_permission_desc"
                            android:textSize="12sp"
                            android:textColor="@color/gray" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <Space
                android:layout_width="match_parent"
                android:layout_height="30dp"/>
            <androidx.cardview.widget.CardView
                android:id="@+id/card_version"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                app:cardElevation="6dp"
                app:cardCornerRadius="8dp"
                android:foreground="?attr/selectableItemBackground"
                android:tag="https://github.com/Juancavr6/RegiBot/releases"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginStart="10dp"
                    android:layout_gravity="center"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/vector_download"
                        app:tint="@color/gray"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="26dp"
                        android:orientation="vertical"
                        android:layout_weight="1">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/displayText_version"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/displayText_version_desc"
                            android:textSize="12sp"
                            android:textColor="@color/gray" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <Space
                android:layout_width="match_parent"
                android:layout_height="30dp"/>
            <androidx.cardview.widget.CardView
                android:id="@+id/card_about"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                app:cardElevation="6dp"
                app:cardCornerRadius="8dp"
                android:foreground="?attr/selectableItemBackground"
                android:tag="https://github.com/Juancavr6"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginStart="10dp"
                    android:layout_gravity="center"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@android:drawable/ic_dialog_info"
                        app:tint="@color/gray"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="26dp"
                        android:orientation="vertical"
                        android:layout_weight="1">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/displayText_about"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            />

                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <Space
                android:layout_width="match_parent"
                android:layout_height="30dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/x_logo"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:padding="9dp"
                    android:layout_gravity="center"
                    android:layout_marginHorizontal="5dp"
                    android:src="@drawable/logo_x"
                    android:tag="https://x.com/juancavr6"
                    style="@style/VectorTintStyle"/>

                <ImageView
                    android:id="@+id/github_logo"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:padding="9dp"
                    android:layout_gravity="center"
                    android:layout_marginHorizontal="5dp"
                    android:src="@drawable/logo_github"
                    android:tag="https://github.com/Juancavr6"
                    style="@style/VectorTintStyle"/>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>




</FrameLayout>